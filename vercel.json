{
    "version": 2,
    "builds": [
        {
            "src": "src/app/main.py",
            "use": "@vercel/python",
            "config": {
                "maxLambdaSize": "15mb",
                "includeFiles": [
                    "src/app/**/*.py",
                    "requirements.txt",
                    "pyproject.toml"
                ]
            }
        }
    ],
    "routes": [
        {
            "src": "/(.*)",
            "dest": "src/app/main.py"
        }
    ]
}